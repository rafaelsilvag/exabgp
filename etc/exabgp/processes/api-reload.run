#!/usr/bin/env python

import sys
import time

messages = [
	'announce route 3.0.0.0/24 next-hop 4.0.0.0',
]

while messages:
	time.sleep(10)
	message = messages.pop(0)
	sys.stdout.write(message + '\n')
	sys.stdout.flush()

now = time.time()
while True and time.time() < now + 20:
	if 'shutdown' in sys.stdin.readline():
		break
	time.sleep(1)
